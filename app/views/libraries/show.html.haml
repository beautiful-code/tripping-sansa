%p#notice= notice

%p
  %b Title:
  = @library.title

%p 
  %b Clips

  %table
    %tr
      %th 
      %th
      %th

    - @library.clips.each do |clip|
      %tr
        %td= image_tag clip.file
        %td= link_to 'Show', clip
        %td= link_to 'Destroy', clip, :method => :delete, :data => { :confirm => 'Are you sure?' }


%p
  %b Add Clip
  = form_for @new_clip, :html => { :multipart => true } do |f|
    = f.hidden_field :library, :value => @library.id
    = f.file_field :file

    .actions
      = f.submit 'Add Clip'
  





= link_to 'Edit', edit_library_path(@library)
\|
= link_to 'Back', libraries_path
