= form_for @library_set do |f|
  - if @library_set.errors.any?
    #error_explanation
      %h2= "#{pluralize(@library_set.errors.count, "error")} prohibited this library_set from being saved:"
      %ul
        - @library_set.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .actions
    = f.submit 'Save'
