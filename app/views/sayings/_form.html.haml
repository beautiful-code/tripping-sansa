= form_for @saying do |f|
  - if @saying.errors.any?
    #error_explanation
      %h2= "#{pluralize(@saying.errors.count, "error")} prohibited this saying from being saved:"
      %ul
        - @saying.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :text
    = f.text_field :text
  .actions
    = f.submit 'Save'
